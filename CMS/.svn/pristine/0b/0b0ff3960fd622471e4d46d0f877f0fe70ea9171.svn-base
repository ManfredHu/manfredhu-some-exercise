@CHARSET "UTF-8";
div#content{
	width:900px;
	margin:0px auto;
}
.button{
	text-align: center;
	border-style: solid;
    border-width: 1px;
    box-shadow: 0 1px 0 rgba(255, 255, 255, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.05);
    border-radius: 5px;
    font-size: 14px;
    line-height: normal;
    padding: 9px 14px;
    cursor: pointer;
    background-color: #3d5098;
    background-image: -moz-linear-gradient(center top , #3d5998, #3d4298);
    background-repeat: repeat-x;
    border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
    color: #ffffff;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
    float:left;
    text-decoration:none;
    margin-top:40px;
    margin-left:452px;
}
tbody tr td:first-of-type{
	width:130px;
	line-height:40px;
	height:40px;
}
input[type="text"]{
	background-color: #ffffff;
    border: 1px solid #cccccc;
    border-radius: 2px;
    color: #515151;
    display: inline-block;
    font-size: 16px;
    padding: 4px;
    width: 210px;
}
textarea{
	background-color: #ffffff;
    border: 1px solid #cccccc;
    border-radius: 2px;
    color: #515151;
    display: inline-block;
    font-size: 16px;
    padding: 4px;
    width: 400px;
    height:250px;
}
